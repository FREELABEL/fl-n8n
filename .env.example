# n8n Configuration
N8N_HOST=0.0.0.0
N8N_PORT=5678
N8N_PROTOCOL=http
NODE_ENV=production

# Webhook URL (change to your domain in production)
WEBHOOK_URL=http://localhost:5678/

# Timezone
GENERIC_TIMEZONE=America/New_York

# Database (uncomment to use PostgreSQL instead of SQLite)
# DB_TYPE=postgresdb
# DB_POSTGRESDB_HOST=postgres
# DB_POSTGRESDB_PORT=5432
# DB_POSTGRESDB_DATABASE=n8n
# DB_POSTGRESDB_USER=n8n
# DB_POSTGRESDB_PASSWORD=n8n_password

# Security (recommended for production)
# N8N_BASIC_AUTH_ACTIVE=true
# N8N_BASIC_AUTH_USER=admin
# N8N_BASIC_AUTH_PASSWORD=your_secure_password

# Encryption key (generate with: openssl rand -base64 32)
# N8N_ENCRYPTION_KEY=your_encryption_key_here

# Email settings (for notifications)
# N8N_EMAIL_MODE=smtp
# N8N_SMTP_HOST=smtp.gmail.com
# N8N_SMTP_PORT=587
# N8N_SMTP_USER=your_email@gmail.com
# N8N_SMTP_PASS=your_app_password
# N8N_SMTP_SENDER=your_email@gmail.com

# Queue mode (uncomment to use Redis for scaling)
# QUEUE_BULL_REDIS_HOST=redis
# QUEUE_BULL_REDIS_PORT=6379
# EXECUTIONS_MODE=queue